<resources>

    <attr name="title" format="string" />
    <attr name="is_required" format="boolean" />
    <attr name="hint" format="string" />

    <declare-styleable name="EditTextDateField">
        <attr name="picker_icon" format="integer" />
        <attr name="datePickerTheme" format="reference" />
    </declare-styleable>

    <declare-styleable name="EditTextPhoneField">
        <attr name="phone_mask" format="string" />
    </declare-styleable>

    <declare-styleable name="BaseEditTextFormField">
        <attr name="input_type" format="string" />
        <attr name="regex" format="string" />
        <attr name="is_required" />
        <attr name="hint" />
        <attr name="max_lines" format="integer" />
        <attr name="min_lines" format="integer" />
        <attr name="background_alpha" format="integer" />
        <attr name="multiline" format="boolean" />
        <attr name="placeholder" format="string" />
        <attr name="show_validation_icon" format="boolean" />
        <attr name="digits" format="string" />
        <attr name="max_characters" format="integer" />
        <attr name="mask" format="string" />
    </declare-styleable>

    <declare-styleable name="SpinnerFormField">
        <attr name="hint" />
        <attr name="is_required" />
        <attr name="enable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BaseRadioGroupFormField">
        <attr name="title" />
        <attr name="space_between_items" format="integer" />
        <attr name="is_required" />
    </declare-styleable>

    <declare-styleable name="BaseCheckboxFormField">
        <attr name="title" />
        <attr name="is_required" />
    </declare-styleable>

    <declare-styleable name="FileSelectorField">
        <attr name="dialog_title" format="string" />
        <attr name="tap_button_text" format="string" />
        <attr name="tap_button_title" format="string" />
        <attr name="src_tap_button" format="reference" />
        <attr name="fileSelectorOptions">
            <flag name="gallery" value="0x01" />
            <flag name="camera" value="0x02" />
            <flag name="file" value="0x04" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomButton">
        <attr name="type" format="string" />
    </declare-styleable>

    <declare-styleable name="CollapsibleView">
        <attr name="android:padding" />
        <attr name="android:paddingStart" />
        <attr name="android:paddingTop" />
        <attr name="android:paddingEnd" />
        <attr name="android:paddingBottom" />
        <attr name="content" format="reference" />
        <attr name="collapsibleTitle" format="string" />
        <attr name="subtitle" format="string" />
        <attr name="hideActionLabel" format="string" />
        <attr name="showActionLabel" format="string" />
        <attr name="actionLabelColor" format="color" />
        <attr name="image" format="reference" />
        <attr name="visibleIndicatorArrow" format="boolean" />
        <attr name="useAppCompactPadding" format="boolean" />
        <attr name="imageTintColor" format="color" />
        <attr name="isCollapsed" format="boolean" />
    </declare-styleable>
    <attr name="textInputLayoutTheme" format="reference" />

    <declare-styleable name="CustomTextView">
        <attr name="type_text" format="enum">
            <enum name="body" value="0" />
            <enum name="title" value="1" />
            <enum name="subtitle" value="2" />
            <enum name="sectionTitle" value="3" />
            <enum name="link" value="4" />
            <enum name="h2_title" value="5" />
            <enum name="sectionBody" value="6" />
            <enum name="h1_title" value="7" />
            <enum name="h3_title" value="8" />
        </attr>
    </declare-styleable>

    <declare-styleable name="StackedBarsGraph">
        <attr name="stackedBarsGraphNumbersTextSize" format="dimension" />
        <attr name="stackedBarsGraphNumbersColor" format="color" />
        <attr name="stackedBarsGraphLabelsTextSize" format="dimension" />
        <attr name="stackedBarsGraphLabelsColor" format="color" />
        <attr name="stackedBarsGraphHorizontalLinesStrokeWidth" format="dimension" />
        <attr name="stackedBarsGraphHorizontalLinesColor" format="color" />
        <attr name="stackedBarsGraphBarsStrokeWidth" format="dimension" />
        <attr name="stackedBarsGraphBarsMargin" format="dimension" />
        <attr name="stackedBarsWithTheSameColor" format="boolean" />
        <attr name="stackedBarsColor" format="color" />
    </declare-styleable>

    <declare-styleable name="BarsGraph">
        <attr name="barsGraphNumbersTextSize" format="dimension" />
        <attr name="barsGraphNumbersBold" format="boolean" />
        <attr name="barsGraphLabelsTextSize" format="dimension" />
        <attr name="barsGraphLabelsColor" format="color" />
        <attr name="barsGraphHorizontalLinesStrokeWidth" format="dimension" />
        <attr name="barsGraphHorizontalLinesColor" format="color" />
        <attr name="barsGraphBarsStrokeWidth" format="dimension" />
        <attr name="barsGraphBarsMargin" format="dimension" />
        <attr name="barsWithTheSameColor" format="boolean" />
        <attr name="barsColor" format="color" />
        <attr name="barsStrokeWidthColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CircleGraph">
        <attr name="circleGraphStrokeWidth" format="dimension" />
    </declare-styleable>
</resources>
